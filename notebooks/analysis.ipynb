#1 Project setup

# Import libraries
import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns
import geopandas as gpd
from textblob import TextBlob  # for sentiment analysis

# Load data
sales = pd.read_csv("coffee_sales.csv")
reviews = pd.read_csv("reviews.csv")

# Quick check
print(sales.head())
print(reviews.head())


#2 Data Cleaning

# Check for missing values
print(sales.isnull().sum())

# Convert date column
sales['Date'] = pd.to_datetime(sales['Date'])

# Clean column names (if needed)
sales.columns = sales.columns.str.strip().str.lower().str.replace(" ", "_")

# Preview
sales.info()


#3 Basic Sales Analysis

# Total sales
total_sales = sales['price'].sum()
print(f"Total Sales: ${total_sales:.2f}")

# Sales by item
sales_by_item = sales.groupby('item')['price'].sum().sort_values(ascending=False)
print(sales_by_item)

# Plot top items
sales_by_item.plot(kind="bar", title="Sales by Item")
plt.ylabel("Total Sales ($)")
plt.show()

# Sales trend over time
daily_sales = sales.groupby('date')['price'].sum()
daily_sales.plot(marker='o', title="Daily Sales Trend")
plt.ylabel("Total Sales ($)")
plt.show()


# 4 Mini NLP: Sentiment Analysis on Reviews

# Simple sentiment function
def get_sentiment(text):
    polarity = TextBlob(text).sentiment.polarity
    if polarity > 0:
        return "Positive"
    elif polarity < 0:
        return "Negative"
    else:
        return "Neutral"

# Apply to reviews
reviews['Sentiment'] = reviews['Review_Text'].apply(get_sentiment)
print(reviews.head())

# Count sentiments
sentiment_counts = reviews['Sentiment'].value_counts()
sentiment_counts.plot(kind='bar', title="Customer Sentiment")
plt.show()

#5 Simple Geo-Analysis

# Count customers by location
customers_by_city = sales.groupby('location')['customer_id'].nunique()

# Plot simple bar chart
customers_by_city.plot(kind="bar", title="Customers by Location")
plt.show()

